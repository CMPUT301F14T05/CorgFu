<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/answerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/upvoteAnswerCount"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/upvoteAnswerCount"
        android:layout_toLeftOf="@+id/upvoteAnswerCount"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="0dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/upvoteAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="0"
        android:textColor="#ff04c1d2"
        android:textSize="17sp" />

</RelativeLayout>
